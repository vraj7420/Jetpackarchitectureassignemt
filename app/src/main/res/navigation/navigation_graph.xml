<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/navigationScreen1Fragment">

    <fragment
        android:id="@+id/navigationScreen1Fragment"
        android:name="com.example.jetpackarchitectureassignemt.view.fragment.NavigationScreen1Fragment"
        android:label="NavigationScreen1Fragment" >
        <action
            android:id="@+id/action_navigationScreen1Fragment_to_navigationScreen2Fragment"
            app:destination="@id/navigationScreen2Fragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/navigationScreen2Fragment"
        android:name="com.example.jetpackarchitectureassignemt.view.fragment.NavigationScreen2Fragment"
        android:label="NavigationScreen2Fragment" >
        <action
            android:id="@+id/action_navigationScreen2Fragment_to_navigationScreen3Fragment"
            app:destination="@id/navigationScreen3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/navigationScreen3Fragment"
        android:name="com.example.jetpackarchitectureassignemt.view.fragment.NavigationScreen3Fragment"
        android:label="NavigationScreen3Fragment" />
</navigation>